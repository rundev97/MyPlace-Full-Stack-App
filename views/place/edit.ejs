<% include ../layout/header %>
    <div class='container text-center'>
    
    
    <h1>Edit <%= place.name %></h1>
    <br>
    <form action='/placecamp/<%= place._id %>?_method=PUT' method='POST'>
        <div class='container' style='width: 35%'>
            <div class='form-group'>
                <input class='form-control' type='text' name='place[name]' value='<%= place.name %>'></input>
            </div>
            <div class='form-group'>
                <input class='form-control'type='text' name='place[city]' value='<%= place.city %>'></input>
            </div>
            <div class='form-group'>
                <input class='form-control'type='text' name='place[country]' value='<%= place.country %>'></input>
            </div>
            <div class='form-group'>
                <input class='form-control'type='text' name='place[image]' value='<%= place.image %>'></input>
            </div>
            <div class='form-group'>
                <textarea rows="5" cols="50" class='form-control'type='text' name='place[description]'><%= place.description %></textarea>
            </div>
            <button class='btn btn-lg btn-warning btn-block'type='submit'>Enter</button>
        </div>
    </form>
    <br>
    </div>
<% include ../layout/footer %>