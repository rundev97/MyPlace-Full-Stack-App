    <!--New Comment Form-->

    <div class='container text-center'>
        <h1>Add a comment</h1>
        <br>
        <form method='POST' action='/placecamp/<%= id %>/comments'>
            <div class='container' style='width: 35%'>
                <div class='form-group'>
                    <input class='form-control' type='text' name='comment[content]' placeholder='Comment'></input>
                </div>
                <button class='btn btn-lg btn-success btn-block' type='submit'>Enter</button>
            </div>
        </form>
    </div>
    
