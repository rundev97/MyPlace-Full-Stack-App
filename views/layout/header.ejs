<!DOCTYPE html!>
    <html>
        <head>
            <meta charset="utf-8">
            <title>Welcom to My Place - The most beautiful place to visit around the world</title>
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
            <script src="https://code.jquery.com/jquery-3.2.1.min.js"   integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="   crossorigin="anonymous"></script>
            <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
            <link rel='stylesheet' href='/css/style.css'> 
        </head>
        <body>
          
            <!--Navigation-->
            
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <a class="navbar-brand logo" href="/"></a>
                      
                        <ul class="nav navbar-nav">
                          <li class="nav-item active">
                            <a class="nav-link" href="/placecamp">Place list <span class="sr-only">(current)</span></a>
                          </li>
                          <li class="nav-item">
                            <a class="nav-link disabled" href="/placecamp/new">Add New Place</a>
                          </li>
                        </ul>
                        
                        <ul class="nav navbar-nav navbar-right">
                          
                          <!--Display Signup login logout-->
                          <% if (!currentUser){ %>
                            <li class="nav-item">
                              <a class="nav-link" href="/login">Login <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                              <a class="nav-link" href="/register">Sign Up</a>
                            </li>
                          <% }else { %>
                          
                          <!--Display current user-->
                         
                          
                          <!--Display logout-->
                          <li class="nav-item">
                            <a class="nav-link" >Hi!, Welcome <strong><%= currentUser.username %></strong></a>
                          </li>
                          <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                          </li>
                          <% } %>
                          
                        </ul>
                </div>
            </nav>
            
            
             <!--Banneer-->
            <div class='container-fluid banneer'>
              <div class='banneerTitle'>
                <h3>Top World Place</h3>
                <h4>Discover the most beautiful place to visit all around the world</h4>
              </div>
            </div><br>
            
            
            <!--flash message-->
            
            <div class='container'>
               <% if(error.length > 0){ %>
                  <div class="alert alert-danger" role="alert">
                      <%= error %>
                      <% console.log(error); %>
                  </div>
                <% } %>
                
                <% if(success.length > 0){ %>
                  <div class="alert alert-success" role="alert">
                      <%= success %>
                  </div>
                <% } %>
            </div>
            
            
           
            
            
            
            
            
            
           
            