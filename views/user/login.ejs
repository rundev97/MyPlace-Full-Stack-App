<% include ../layout/header %>

    <div class='container text-center'>
        <h1>Login</h1>
        <form action='/login' method='post'>
            <div class='container' style='width: 35%'>
                <div class='form-group'>
                    <input class='form-control' type='text' name='username' placeholder='Username'></input>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='password' name='password' placeholder='Password'></input>
                </div>
                <button class='btn btn-lg btn-info btn-block' type='submit'>Login</button><br>
                <p style='text-align: left; color: #bbb'> If you dont have an account yet, please create an account first by clicking on <a href='/register'>Register</a> link to SignUp</p>
            </div>
        </form>
    </div>
    <br><br><br>
    
